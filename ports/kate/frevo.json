{
  "name": "Frevo",
  "author": "Renato Barros",
  "version": "1.0.0",
  "license": "MIT",
  "metadata": {
    "description": "Vibrant dark Kate/KWrite color scheme using the Frevo palette (unchanged).",
    "variant": "dark",
    "accent": "blue"
  },
  "colors": {
    "background": "#1A1F2E",
    "foreground": "#F2F4F8",
    "selection": "#2B4A7A",
    "selection-inactive": "#2B4A7A80",
    "line-number": "#4A6083",
    "current-line": "#0F285180",
    "bracket-match": "#2F3D5C",
    "bracket-mismatch": "#FF5B5F",
    "word-wrap-marker": "#1F3D68",
    "spell-checking": "#DAA445",
    "indentation-line": "#1A3558",
    "icon-border": "#1F3D68",
    "marker-line": "#2A3447",
    "folding-marker": "#4B9AFF",
    "code-folding": "#4B9AFF",
    "template-placeholder": "#2F3D5C",
    "template-focus": "#4B9AFF"
  },
  "text-styles": {
    "Normal": { "foreground": "#F2F4F8", "background": "#1A1F2E" },
    "Keyword": { "foreground": "#4B9AFF", "bold": true },
    "ControlFlow": { "foreground": "#D966FF", "bold": true },
    "DataType": { "foreground": "#F0B000", "bold": true },
    "Function": { "foreground": "#00A3E5" },
    "Variable": { "foreground": "#F2F4F8" },
    "Comment": { "foreground": "#7AD96A", "italic": true },
    "String": { "foreground": "#00A3E5" },
    "Number": { "foreground": "#FF6700" },
    "Operator": { "foreground": "#FF6700" },
    "Constant": { "foreground": "#5FD94F" },
    "Error": { "foreground": "#FF5B5F", "bold": true },
    "Preprocessor": { "foreground": "#B0B8CC" },
    "Attribute": { "foreground": "#00A3E5" },
    "Tag": { "foreground": "#4B9AFF" }
  },
  "ansi": {
    "0": "#0D2449",
    "1": "#FF5B5F",
    "2": "#5FD94F",
    "3": "#F0B000",
    "4": "#4B9AFF",
    "5": "#D966FF",
    "6": "#00A3E5",
    "7": "#F2F4F8",
    "8": "#6B7589",
    "9": "#FF8A8D",
    "10": "#8EFF7D",
    "11": "#FFE566",
    "12": "#7AB6FF",
    "13": "#EA9BFF",
    "14": "#5DD4FF",
    "15": "#FFFFFF"
  }
}
