{
  "manifest_version": 3,
  "name": "Frevo",
  "version": "1.0.0",
  "description": "Vibrant dark Frevo theme using the official palette.",
  "theme": {
    "colors": {
      "frame": "#1A1F2E",
      "frame_inactive": "#21283A",
      "toolbar": "#1A1F2E",
      "tab_text": "#F2F4F8",
      "tab_background_text": "#B0B8CC",
      "bookmark_text": "#F2F4F8",
      "ntp_background": "#1A1F2E",
      "ntp_text": "#F2F4F8",
      "ntp_link": "#4B9AFF",
      "ntp_header": "#21283A",
      "button_background": "#4B9AFF"
    },
    "tints": {
      "buttons": [0.58, 0.6, 0.95]
    },
    "properties": {
      "ntp_background_alignment": "bottom",
      "ntp_background_repeat": "no-repeat"
    }
  }
}
